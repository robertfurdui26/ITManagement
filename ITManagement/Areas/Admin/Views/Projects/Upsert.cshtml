@model ITManagement.Models.ViewModels.ProjectVM



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-dark ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Project.Id != 0 ? "Update" : "Create")  Projects</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Project.Id" hidden />
            <input asp-for="Project.ImageUrl" hidden />

            <div class=" row">
                <div class=" col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Project.Name" class="form-control border-0 shadow" />
                            <label asp-for="Project.Name" class="ms-2"></label>
                            <span asp-validation-for="Project.Name" class="text-danger"></span>
                        </div>
                     
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Project.Description" class="form-control border-0 shadow" />
                            <label asp-for="Project.Description" class="ms-2"></label>
                            <span asp-validation-for="Project.Description" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Project.FinishProject" class="form-control border-0 shadow" />
                            <label asp-for="Project.FinishProject" class="ms-2"></label>
                            <span asp-validation-for="Project.FinishProject" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Project.EmployeeId" asp-items="@Model.EmployeeList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category</option>
                            </select>
                            <label asp-for="Project.EmployeeId" class="ms-2"></label>
                            <span asp-validation-for="Project.EmployeeId" class="text-danger"></span>
                        </div>
                        
                        
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Project.ImageUrl" class="ms-2"></label>
                        </div>

                        <div class="row pt-2">
                            <div class="col-12 col-md-3 d-flex justify-content-center">
                                @if (Model.Project.Id != 0)
                                {
                                    <button type="submit" class="btn btn-dark form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-dark form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3 d-flex justify-content-center">
                                <a asp-controller="Projects" asp-action="ShowProjects" class="btn btn-dark border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class=" col-2">
                    <img src="@Model.Project.ImageUrl" width="100%"
                    style="border-radius:5px; border:1px solid #bbb9b9"/>
                </div>
            </div>
          
        </form>
    </div>
</div>




@section Scripts{
   
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}